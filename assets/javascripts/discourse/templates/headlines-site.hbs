<article class="static-page headlines-page">
  <header class="container">
    <h2 class="page-title">{{i18n 'headlines.title'}}</h2>
    <p>
      {{{i18n 'headlines.description'}}}
    </p>
  </header>
  <section class="container">
    <form action="#" class="check-site">
      <label for="scan">{{i18n 'headlines.check_form.label'}}</label>
      <input type="url" placeholder="{{i18n 'headlines.check_form.field'}}">
      <button type="submit" class="btn-primary">
        {{i18n 'headlines.check_form.action'}}
      </button>
    </form>
  </section>
  <div class="container row">
    <section class="site-details">
      <ul class="breadcrumb">
        <li class="breadcrumb-item">
          <a href="#">{{i18n 'headlines.issues.all'}}</a>
        </li>
        <li class="breadcrumb-item"><a href="#">Industry Name 1</a></li>
        <li class="breadcrumb-item"><a href="http://mostsecuresiteintheworld.com">mostsecuresiteintheworld.com</a></li>
      </ul>
      <h3 class="site-name">mostsecuresiteintheworld.com</h3>
      <div class="site-notes">
        <span class="site-status">
          {{fa-icon "check-circle value-excellent"}}
          {{i18n 'headlines.test_result.excellent'}} - 100%
        </span>
        <span class="site-location">
          {{fa-icon "globe"}}
          United States of America
        </span>
      </div>
      <h4>{{i18n 'headlines.similar_urls'}}</h4>
      <ul class="test-results">
        <li>
          {{i18n 'headlines.issues.hsts'}}
          <div class="value">65%</div>
        </li>
        <li>
          {{i18n 'headlines.issues.x_xss'}}
          <div class="value">14%</div>
        </li>
        <li>
          {{i18n 'headlines.issues.x_content_type'}}
          <div class="value">45%</div>
        </li>
        <li>
          {{i18n 'headlines.issues.x_frame_options'}}
          <div class="value">19%</div>
        </li>
        <li>
          {{i18n 'headlines.issues.x_content_security_options'}}
          <div class="value">19%</div>
        </li>
      </ul>

      <h4>{{i18n 'headlines.test'}}</h4>
      <ul class="tests-list">
        <li>
          {{fa-icon "plus-circle"}}
          Stops others from spying or modifying your communications
          <div class="test-notes">
            {{i18n 'headlines.status'}}: <span class="value-excellent test-value">{{i18n 'headlines.test_result.excellent'}}</span>
            {{i18n 'headlines.issue'}}: {{i18n 'headlines.issues.hsts'}}
          </div>
        </li>
        <li>
          {{fa-icon "plus-circle"}}
          Stops others from spying or modifying your communications
          <div class="test-notes">
            {{i18n 'headlines.status'}}: <span class="value-excellent test-value">{{i18n 'headlines.test_result.excellent'}}</span>
            {{i18n 'headlines.issue'}}: {{i18n 'headlines.issues.hsts'}}
          </div>
        </li>
      </ul>
    </section>
  </div>
</article>
