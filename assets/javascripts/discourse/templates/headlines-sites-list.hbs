<article class="static-page headlines-page">
  <header class="container">
    <h2 class="page-title">{{i18n 'headlines.title'}}</h2>
    <p>
      {{{i18n 'headlines.description'}}}
    </p>
  </header>
  <section class="container">
    <form action="#" class="check-site">
      <label for="scan">{{i18n 'headlines.check_form.label'}}</label>
      <input type="url" placeholder="{{i18n 'headlines.check_form.field'}}">
      <button type="submit" class="btn-primary">
        {{i18n 'headlines.check_form.action'}}
      </button>
    </form>
  </section>
  <div class="container row">
    <aside class="headlines-filters">
      <label class="filter-type" for="country">{{i18n 'headlines.country'}}</label>
      {{combo-box valueAttribute="value" content=countries value=country_code}}

      <label class='filter-type' for='rating'>{{i18n 'headlines.rating.label'}}</label>
      <ul>
        {{#each rating in ratings}}
          <li>
            <label for="r_{{rating}}">
              <input type="checkbox" id="r_{{rating}}">
              {{localeInterpolation 'headlines.rating' rating}}
            </label>
          </li>
        {{/each}}
      </ul>

      <label class="filter-type" for="issue_type">{{i18n 'headlines.issue_type'}}</label>
      <ul>
        {{#each type in issueTypes}}
          <li>
            <label for="{{type}}">
              <input type="checkbox" id="{{type}}">
              {{localeInterpolation 'headlines.issues' type}}
            </label>
          </li>
        {{/each}}
      </ul>
    </aside>
    <section class="sites-list">
      <div class="pull-right last-scan">
        {{fa-icon "clock-o"}}
        {{i18n 'headlines.last_scan'}}: 17 Dec 2014
      </div>
      <a href="#" class="nav-back">{{fa-icon "arrow-left"}} {{i18n 'headlines.back'}}</a>
      <h3 class="industry-title industry-status-excellent">Industry Name 1</h3>
      <ul class="compact-labels">
        <li>
          <span class="chart-value value-excellent">60%</span>
        </li>
        <li>
          <span class="chart-value value-poor">22%</span>
        </li>
        <li>
          <span class="chart-value value-bad">18%</span>
        </li>
      </ul>
      <div class="table-search">
        <input class="col-6" placeholder="Filter by URL" type="search">
        <i class="fa fa-search"></i>
      </div>
      <table class="topic-list">
        <thead>
          <tr>
            <th data-sort-order="default" class="default">
              {{i18n 'headlines.url'}}
            </th>
            <th data-sort-order="category" class="category sortable">
              {{i18n 'headlines.country'}}
            </th>
            <th data-sort-order="posters" class="posters">
              {{i18n 'headlines.passed_tests'}}
            </th>
          </tr>
        </thead>
        <tbody>
          <tr class="topic-list-item">
            <td class="main-link clearfix">
              <a href="/t/#" class="title">
                mostsecuresiteintheworld.com
                {{fa-icon "external-link"}}
              </a>
            </td>
            <td class="category">USA</td>
            <td><div class="value-excellent">100%</div></td>
          </tr>
          <tr class="topic-list-item">
            <td class="main-link clearfix">
              <a href="/t/#" class="title">
                securesiteintheworld.com
                {{fa-icon "external-link"}}
              </a>
            </td>
            <td class="category">USA</td>
            <td><div class="value-poor">60%</div></td>
          </tr>
        </tbody>
      </table>
    </section>
  </div>
</article>
