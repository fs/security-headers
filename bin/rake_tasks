#!/usr/bin/env sh

cd /var/www/discourse

RAILS_ENV=production

su discourse -c 'bundle exec rake headlines:categories:refresh_parents'
echo '---> Refresh categories parents completed!'

su discourse -c 'bundle exec rake headlines:refresh_domains'
echo '---> Refresh domains completed!'

su discourse -c 'bundle exec rake headlines:domains:refresh_categories'
echo '---> Refresh categories completed!'

su discourse -c 'bundle exec rake headlines:scan_domains'
echo '---> Scan domains completed!'
